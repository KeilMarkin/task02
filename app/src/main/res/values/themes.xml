<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Task02" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="ButtonList.Theme.Task02" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/Red500</item>
        <item name="android:textColor">@color/Red500</item>

    </style>
    <style name="ButtonFiltres.Theme.Task02" parent="@style/Widget.AppCompat.Button">

        <item name="android:textColor">@color/selector_filtres_text_color</item>
        <item name="android:backgroundTint">@color/selector_filtres_background</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_marginStart">10dp</item>


    </style>

    <style name="Bb.Theme.Task02" parent="android:Widget.Button.Toggle">

        <item name="android:textColor">@color/selector_filtres_text_color</item>
        <item name="android:backgroundTint">@color/selector_filtres_background</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:buttonCornerRadius">5dp</item>
        <item name="android:stateListAnimator">@animator/nav_default_pop_enter_anim</item>
        <item name="android:elevation">10dp</item>

    </style>

    <style name="Theme.Task02" parent="Base.Theme.Task02" />
    <style name="text_normal">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="text_bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>